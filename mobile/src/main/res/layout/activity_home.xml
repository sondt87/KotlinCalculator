<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="numpadClickedListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="operationClickedListener"
            type="android.view.View.OnClickListener"/>
    </data>

<LinearLayout
    android:id="@+id/calculator_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.github.sondt87.calculator.HomeActivity"
    >

    <TextView
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:fontFamily="sans-serif-light"
        android:gravity="right|bottom"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:background="@android:color/transparent"
        android:textSize="@dimen/formula_text_size"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical|right"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:text="0"
        android:textColor="@color/textFirst"
        android:textSize="@dimen/display_text_size"/>

    <View
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#f7f7f7"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">


        <Button
            android:onClick="clearClicked"
            android:id="@+id/btn_clear"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"/>



        <Button
            android:id="@+id/btn_root"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{operationClickedListener}"
            android:layout_weight="1"
            android:text="√"/>

        <Button
            android:id="@+id/btn_modulo"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:onClick="@{operationClickedListener}"
            android:textAllCaps="false"
            android:textSize="@dimen/mod_text_size"/>


        <Button
            android:id="@+id/btn_divide"
            style="@style/MyButton.Third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{operationClickedListener}"
            android:layout_weight="1"
            android:text="÷"/>

        <Button
            android:id="@+id/btn_reset"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AC"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_7"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"/>

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_8"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"/>

        <Button

            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_9"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"/>

        <Button
            android:id="@+id/btn_multiply"
            android:onClick="@{operationClickedListener}"
            style="@style/MyButton.Third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_4"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"/>

        <Button
            android:id="@+id/btn_5"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@{numpadClickedListener}"
            android:text="5"/>

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_6"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"/>

        <Button
            android:onClick="@{operationClickedListener}"
            android:id="@+id/btn_minus"
            style="@style/MyButton.Third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_1"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"/>

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_2"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"/>

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_3"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"/>
        <Button
            android:onClick="@{operationClickedListener}"
            android:id="@+id/btn_plus"
            style="@style/MyButton.Third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">
        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_00"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00"/>
        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_0"
            style="@style/MyButton.Second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"/>

        <Button
            android:onClick="@{numpadClickedListener}"
            android:id="@+id/btn_decimal"
            style="@style/MyButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."/>

        <!--<Button-->
            <!--android:id="@+id/btn_equals"-->
            <!--style="@style/MyButton"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:text="="-->
            <!--/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:text="="
            android:src="@drawable/ic_equals"
            android:layout_centerInParent="true"
            android:id="@+id/btn_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:onClick="equalsClicked"
            />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
</layout>